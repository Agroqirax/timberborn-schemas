{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/agroqirax/timberborn-schemas/main/schemas/WorkerType.schema.json",
  "title": "Workertype specification",
  "description": "Add or modify a workertype",
  "type": "object",
  "properties": {
    "WorkerTypeSpec": {
      "type": "object",
      "description": "Workertype specification",
      "properties": {
        "Id": {
          "type": "string",
          "description": "ID of the workertype to be modified",
          "minLength": 1,
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "BackwardCompatibleIds": {
          "type": "array",
          "description": "Backwardcompatible IDs",
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_-]+$"
          }
        },
        "DisplayNameLocKey": {
          "type": "string",
          "description": "Display name lockey",
          "minLength": 1,
          "pattern": "^[a-zA-Z0-9_-]+(\\.[a-zA-Z0-9_-]+)*$"
        },
        "WorkerOnlyTextLocKey": {
          "type": "string",
          "description": "Worker only text lockey",
          "minLength": 1,
          "pattern": "^[a-zA-Z0-9_-]+(\\.[a-zA-Z0-9_-]+)*$"
        },
        "IgnoresWorkingHours": {
          "type": "boolean",
          "description": "Ignores working hours",
          "default": false
        }
      },
      "required": ["Id"],
      "minItems": 2
    }
  },
  "required": ["WorkerTypeSpec"]
}
