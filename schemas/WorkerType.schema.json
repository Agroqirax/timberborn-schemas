{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/agroqirax/timberborn-schemas/main/schemas/WorkerType.schema.json",
  "title": "Worker type specification",
  "description": "Add or modify a worker type",
  "type": "object",
  "properties": {
    "WorkerTypeSpec": {
      "type": "object",
      "properties": {
        "Id": {
          "type": "string",
          "title": "Id",
          "examples": ["Beaver", "Bot"]
        },
        "BackwardCompatibleIds": {
          "$ref": "#/$defs/BackwardCompatibleIds"
        },
        "IgnoresWorkingHours": {
          "type": "boolean",
          "title": "Ignores working hours",
          "examples": [false, true]
        },
        "DisplayNameLocKey": {
          "type": "string",
          "title": "Display name loc key",
          "examples": ["Beaver.PluralDisplayName", "Bot.PluralDisplayName"]
        },
        "WorkerOnlyTextLocKey": {
          "type": "string",
          "title": "Worker only text loc key",
          "examples": ["Work.BeaverOnly", "Work.BotOnly"]
        },
        "BackwardCompatibleIds#append": {
          "$ref": "#/$defs/BackwardCompatibleIds"
        },
        "BackwardCompatibleIds#remove": {
          "$ref": "#/$defs/BackwardCompatibleIds"
        },
        "BackwardCompatibleIds#delete": {
          "type": "object",
          "properties": {},
          "additionalProperties": false
        }
      },
      "minProperties": 1,
      "additionalProperties": false,
      "title": "Worker type specification"
    }
  },
  "minProperties": 1,
  "additionalProperties": false,
  "$defs": {
    "BackwardCompatibleIds": {
      "type": "array",
      "title": "Backward compatible ids"
    }
  }
}
