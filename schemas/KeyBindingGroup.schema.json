{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/agroqirax/timberborn-schemas/main/schemas/KeyBindingGroup.schema.json",
  "title": "KeyBindingGroup specification",
  "description": "Add or modify a keybindinggroup",
  "type": "object",
  "properties": {
    "KeyBindingGroupSpec": {
      "type": "object",
      "description": "KeyBindingGroup specification",
      "properties": {
        "Id": {
          "type": "string",
          "description": "ID of the keybindinggroup to be modified",
          "minLength": 1,
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "Order": {
          "type": "number",
          "description": "Order in the settings menu"
        },
        "LocKey": {
          "type": "string",
          "description": "Display name lockey",
          "minLength": 1,
          "pattern": "^[a-zA-Z0-9_-]+(\\.[a-zA-Z0-9_-]+)*$"
        }
      },
      "required": ["Id"],
      "minItems": 2
    }
  },
  "required": ["KeyBindingGroupSpec"]
}
