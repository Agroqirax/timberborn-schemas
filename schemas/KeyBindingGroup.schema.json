{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/agroqirax/timberborn-schemas/main/schemas/KeyBindingGroup.schema.json",
  "title": "Key binding group specification",
  "description": "Add or modify a key binding group",
  "type": "object",
  "properties": {
    "KeyBindingGroupSpec": {
      "type": "object",
      "properties": {
        "Id": {
          "type": "string",
          "title": "Id",
          "examples": [
            "Camera",
            "Time",
            "Objects",
            "UI",
            "SettlementPanel",
            "Internal",
            "Buildings",
            "MapEditor",
            "Dev"
          ]
        },
        "Order": {
          "type": "integer",
          "title": "Order"
        },
        "LocKey": {
          "type": "string",
          "title": "Loc key",
          "examples": [
            "",
            "KeyBindingGroup.Camera",
            "KeyBindingGroup.Time",
            "KeyBindingGroup.Objects",
            "KeyBindingGroup.UI",
            "KeyBindingGroup.SettlementPanel",
            "KeyBindingGroup.Buildings",
            "KeyBindingGroup.MapEditor"
          ],
          "default": ""
        }
      },
      "minProperties": 1,
      "additionalProperties": false,
      "title": "Key binding group specification"
    },
    "HiddenKeyBindingGroupSpec": {
      "type": "object",
      "title": "Hidden key binding group specification"
    }
  },
  "minProperties": 1,
  "additionalProperties": false
}
