{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/agroqirax/timberborn-schemas/main/schemas/BonusType.schema.json",
  "title": "",
  "description": "",
  "type": "object",
  "properties": {
    "BonusTypeSpec": {
      "type": "object",
      "properties": {
        "Id": {
          "type": "string",
          "title": "Id",
          "examples": [
            "WorkingSpeed",
            "MovementSpeed",
            "GrowthSpeed",
            "CuttingSuccessChance",
            "LifeExpectancy",
            "CarryingCapacity"
          ]
        },
        "MinimumValue": {
          "type": "number",
          "title": "Minimum value",
          "examples": [0.1, 0.05, 0.25, 0.01],
          "default": 0.1
        },
        "MaximumValue": {
          "type": "number",
          "title": "Maximum value",
          "examples": [1000.0, 2.0, 1.0, 10.0]
        },
        "Icon": {
          "type": "string",
          "title": "Icon",
          "examples": [
            "",
            "Sprites/Bonuses/WorkingSpeed",
            "Sprites/Bonuses/MovementSpeed",
            "Sprites/Bonuses/GrowthSpeed",
            "Sprites/Bonuses/LifeExpectancy"
          ],
          "default": ""
        },
        "LocKey": {
          "type": "string",
          "title": "Loc key",
          "examples": [
            "Bonus.WorkingSpeed",
            "Bonus.MovementSpeed",
            "Bonus.GrowthSpeed",
            "Bonus.CuttingSuccessChance",
            "Bonus.LifeExpectancy",
            "Bonus.CarryingCapacity"
          ]
        }
      },
      "minProperties": 1,
      "additionalProperties": false,
      "title": "Bonus type specification"
    }
  },
  "minProperties": 1,
  "additionalProperties": false
}
