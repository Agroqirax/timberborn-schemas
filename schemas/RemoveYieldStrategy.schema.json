{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/agroqirax/timberborn-schemas/main/schemas/RemoveYieldStrategy.schema.json",
  "title": "Remove yield strategies",
  "description": "Add or modify a remove yield strategy",
  "type": "object",
  "properties": {
    "RemoveYieldStrategySpec": {
      "type": "object",
      "properties": {
        "Id": {
          "type": "string",
          "title": "Id",
          "examples": ["Cuttable", "Uncuttable", "Ruins"]
        },
        "CompatibleResourceGroups": {
          "$ref": "#/$defs/CompatibleResourceGroups"
        },
        "Animation": {
          "type": "string",
          "title": "Animation",
          "examples": ["Working", "Cutting"],
          "default": "Working"
        },
        "CompatibleResourceGroups#append": {
          "$ref": "#/$defs/CompatibleResourceGroups"
        },
        "CompatibleResourceGroups#remove": {
          "$ref": "#/$defs/CompatibleResourceGroups"
        },
        "CompatibleResourceGroups#delete": {
          "type": "object",
          "properties": {},
          "additionalProperties": false
        }
      },
      "minProperties": 1,
      "additionalProperties": false,
      "title": "Remove yield strategy specification"
    }
  },
  "minProperties": 1,
  "additionalProperties": false,
  "$defs": {
    "CompatibleResourceGroups": {
      "type": "array",
      "items": {
        "type": "string",
        "examples": [
          "Cuttable",
          "Farmhouse",
          "AquaticFarmhouse",
          "Gatherable",
          "Tappable",
          "Ruin"
        ]
      },
      "title": "Compatible resource groups"
    }
  }
}
