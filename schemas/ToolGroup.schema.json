{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/agroqirax/timberborn-schemas/main/schemas/ToolGroup.schema.json",
  "title": "Tool group specification",
  "description": "Add or modify a tool group",
  "type": "object",
  "properties": {
    "ToolGroupSpec": {
      "type": "object",
      "properties": {
        "Id": {
          "type": "string",
          "title": "Id",
          "examples": [
            "Fields",
            "Forestry",
            "TreeCutting",
            "BuilderPriority",
            "Demolishing"
          ]
        },
        "DisplayNameLocKey": {
          "type": "string",
          "title": "Display name loc key",
          "examples": [
            "ToolGroups.FieldsPlanting",
            "ToolGroups.ForestryPlanting",
            "ToolGroups.TreeCutting",
            "ToolGroups.Priority",
            "ToolGroups.Demolishing"
          ]
        },
        "Icon": {
          "type": "string",
          "title": "Icon",
          "examples": [
            "Sprites/BottomBar/FieldsPlantingToolGroupIcon",
            "Sprites/BottomBar/ForestryPlantingToolGroupIcon",
            "Sprites/BottomBar/TreeToolGroupIcon",
            "Sprites/BottomBar/PriorityToolGroupIcon",
            "Sprites/BottomBar/DeleteGroupIcon"
          ]
        }
      },
      "minProperties": 1,
      "additionalProperties": false,
      "title": "Tool group specification"
    },
    "PlantingToolGroupSpec": {
      "type": "object",
      "title": "Planting tool group specification"
    },
    "TreeCuttingToolGroupSpec": {
      "type": "object",
      "title": "Tree cutting tool group specification"
    },
    "ConstructionModeToolGroupSpec": {
      "type": "object",
      "title": "Construction mode tool group specification"
    },
    "BuilderPriorityToolGroupSpec": {
      "type": "object",
      "title": "Builder priority tool group specification"
    }
  },
  "minProperties": 1,
  "additionalProperties": false
}
