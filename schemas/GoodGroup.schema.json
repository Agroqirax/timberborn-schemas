{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/agroqirax/timberborn-schemas/main/schemas/GoodGroup.schema.json",
  "title": "Good group specification",
  "description": "Add or modify agood group",
  "type": "object",
  "properties": {
    "GoodGroupSpec": {
      "type": "object",
      "description": "Good group specification",
      "properties": {
        "Id": {
          "type": "string",
          "description": "ID of the good group to be modified",
          "examples": ["Food", "Ingredients", "Log", "Materials", "Water"],
          "minLength": 1,
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "Order": {
          "type": "number",
          "description": "Order in the top bar"
        },
        "DisplayNameLocKey": {
          "type": "string",
          "description": "Display name lockey",
          "examples": [
            "TopBar.Food",
            "TopBar.Ingredients",
            "TopBar.Log",
            "TopBar.Materials",
            "TopBar.Water"
          ],
          "minLength": 1,
          "pattern": "^[a-zA-Z0-9_-]+(\\.[a-zA-Z0-9_-]+)*$"
        },
        "Icon": {
          "type": "string",
          "description": "Good group icon",
          "examples": [
            "Sprites/TopBar/Food",
            "Sprites/TopBar/Ingredients",
            "Sprites/TopBar/Log",
            "Sprites/TopBar/Materials",
            "Sprites/TopBar/Water"
          ],
          "minLength": 1,
          "pattern": "^[a-zA-Z0-9_-]+(\\/[a-zA-Z0-9_-]+)*$"
        },
        "SingleResourceGroup": {
          "type": "boolean",
          "description": "Group with single resource"
        }
      },
      "required": ["Id"],
      "minItems": 2
    }
  },
  "required": ["GoodGroupSpec"]
}
