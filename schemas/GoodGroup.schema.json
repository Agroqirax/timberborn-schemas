{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/agroqirax/timberborn-schemas/main/schemas/GoodGroup.schema.json",
  "title": "Good group specification",
  "description": "Add or modify a good group",
  "type": "object",
  "properties": {
    "GoodGroupSpec": {
      "type": "object",
      "properties": {
        "Id": {
          "type": "string",
          "title": "Id",
          "examples": ["Materials", "Food", "Badwater", "Ingredients", "Water"]
        },
        "Order": {
          "type": "integer",
          "title": "Order"
        },
        "Icon": {
          "type": "string",
          "title": "Icon",
          "examples": [
            "Sprites/TopBar/Materials",
            "Sprites/TopBar/Food",
            "Sprites/TopBar/Badwater",
            "Sprites/TopBar/Ingredients",
            "Sprites/TopBar/Water"
          ]
        },
        "SingleResourceGroup": {
          "type": "boolean",
          "title": "Single resource group",
          "examples": [false, true],
          "default": false
        },
        "DisplayNameLocKey": {
          "type": "string",
          "title": "Display name loc key",
          "examples": [
            "TopBar.Materials",
            "TopBar.Food",
            "TopBar.Badwater",
            "TopBar.Ingredients",
            "TopBar.Water"
          ]
        }
      },
      "minProperties": 1,
      "additionalProperties": false,
      "title": "Good group specification"
    }
  },
  "minProperties": 1,
  "additionalProperties": false
}
