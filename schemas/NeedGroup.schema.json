{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/agroqirax/timberborn-schemas/main/schemas/NeedGroup.schema.json",
  "title": "Needgroup specification",
  "description": "Add or modify a needgroup",
  "type": "object",
  "properties": {
    "NeedGroupSpec": {
      "type": "object",
      "description": "Needgroup specification",
      "properties": {
        "Id": {
          "type": "string",
          "description": "ID of the needgroup to be modified",
          "minLength": 1,
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "Order": {
          "type": "number",
          "description": "Order in the needs menu"
        },
        "DisplayNameLocKey": {
          "type": "string",
          "description": "Display name lockey",
          "minLength": 1,
          "pattern": "^[a-zA-Z0-9_-]+(\\.[a-zA-Z0-9_-]+)*$"
        }
      },
      "required": ["Id"],
      "minItems": 2
    }
  },
  "required": ["NeedGroupSpec"]
}
