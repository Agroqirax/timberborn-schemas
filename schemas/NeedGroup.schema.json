            "Other",
            "BasicNeeds",
            "Nutrition",
            "Awe",
            "Fun",
            "Boosts",
            "Knowledge",
            "Aesthetics",
            "SocialLife"
          ]
        },
        "Order": {
          "type": "integer",
          "title": "Order"
        },
        "DisplayNameLocKey": {
          "type": "string",
          "title": "Display name loc key",
          "examples": [
            "ToolGroups.Other",
            "NeedGroup.BasicNeeds.DisplayName",
            "NeedGroup.Nutrition.DisplayName",
            "NeedGroup.Awe.DisplayName",
            "NeedGroup.Fun.DisplayName",
            "NeedGroup.Boosts.DisplayName",
            "NeedGroup.Knowledge.DisplayName",
            "NeedGroup.Aesthetics.DisplayName",
