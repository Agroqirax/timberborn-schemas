{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/agroqirax/timberborn-schemas/main/schemas/WorkerOutfit.schema.json",
  "title": "",
  "description": "",
  "type": "object",
  "properties": {
    "WorkerOutfitSpec": {
      "type": "object",
      "properties": {
        "Id": {
          "type": "string",
          "title": "Id",
          "examples": ["Farmer", "Builder", "Hauler", "Pilot"]
        },
        "FactionId": {
          "type": "string",
          "title": "Faction id",
          "examples": ["IronTeeth", "Folktails"],
          "default": "IronTeeth"
        },
        "WorkerType": {
          "type": "string",
          "title": "Worker type",
          "examples": ["Beaver", "Bot"],
          "default": "Beaver"
        },
        "DiffuseTexture": {
          "type": "string",
          "title": "Diffuse texture",
          "examples": [
            "",
            "Materials/Beavers/Common/WorkerOutfits/HaulerBackpackStrings_D",
            "Materials/Beavers/Common/WorkerOutfits/WorkerHammerStrings_D"
          ],
          "default": ""
        },
        "NormalTexture": {
          "type": "string",
          "title": "Normal texture",
          "examples": [
            "",
            "Materials/Beavers/Common/WorkerOutfits/HaulerBackpackStrings_N",
            "Materials/Beavers/Common/WorkerOutfits/WorkerHammerStrings_N"
          ],
          "default": ""
        },
        "Attachments": {
          "$ref": "#/$defs/Attachments"
        },
        "Attachments#append": {
          "$ref": "#/$defs/Attachments"
        },
        "Attachments#remove": {
          "$ref": "#/$defs/Attachments"
        },
        "Attachments#delete": {
          "type": "object",
          "properties": {},
          "additionalProperties": false
        }
      },
      "minProperties": 1,
      "additionalProperties": false,
      "title": "Worker outfit specification"
    }
  },
  "minProperties": 1,
  "additionalProperties": false,
  "$defs": {
    "Attachments": {
      "type": "array",
      "items": {
        "type": "string",
        "examples": [
          "HammerBack.Bot",
          "HammerBack.Beaver",
          "FarmerHat.Bot.IronTeeth",
          "FarmerHat.Bot.Folktails",
          "PilotHelmet.Beaver.IronTeeth",
          "FarmerHat.Beaver.IronTeeth",
          "PilotHelmet.Bot.IronTeeth",
          "FarmerHat.Beaver.Folktails"
        ]
      },
      "title": "Attachments"
    }
  }
}
