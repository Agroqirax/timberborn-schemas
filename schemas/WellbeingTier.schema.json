{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/agroqirax/timberborn-schemas/main/schemas/WellbeingTier.schema.json",
  "title": "Wellbeing tier specification",
  "description": "Add or modify a wellbeing tier",
  "type": "object",
  "properties": {
    "WellbeingTierSpec": {
      "type": "object",
      "properties": {
        "CharacterType": {
          "type": "string",
          "title": "Character type",
          "examples": ["BeaverAdult", "BeaverChild", "Bot"]
        },
        "BonusId": {
          "type": "string",
          "title": "Bonus id",
          "examples": [
            "MovementSpeed",
            "WorkingSpeed",
            "LifeExpectancy",
            "GrowthSpeed"
          ],
          "default": "MovementSpeed"
        },
        "Bonuses": {
          "$ref": "#/$defs/Bonuses"
        },
        "WellbeingThreshold": {
          "type": "integer",
          "title": "Wellbeing threshold"
        },
        "MultiplierIncrement": {
          "type": "number",
          "title": "Multiplier increment",
          "examples": [0.1, 0.2, 0.05],
          "default": 0.1
        },
        "Bonuses#append": {
          "$ref": "#/$defs/Bonuses"
        },
        "Bonuses#remove": {
          "$ref": "#/$defs/Bonuses"
        },
        "Bonuses#delete": {
          "type": "object",
          "properties": {},
          "additionalProperties": false
        }
      },
      "minProperties": 1,
      "additionalProperties": false,
      "title": "Wellbeing tier specification"
    }
  },
  "minProperties": 1,
  "additionalProperties": false,
  "$defs": {
    "Bonuses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "Wellbeing": {
            "type": "integer",
            "title": "Wellbeing"
          },
          "Multiplier": {
            "type": "number",
            "title": "Multiplier"
          }
        },
        "minProperties": 1,
        "additionalProperties": false
      },
      "title": "Bonuses"
    }
  }
}
