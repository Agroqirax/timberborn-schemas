{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/agroqirax/timberborn-schemas/main/schemas/Faction.schema.json",
  "title": "Faction specification",
  "description": "Add or modify a faction",
  "type": "object",
  "properties": {
    "FactionSpec": {
      "type": "object",
      "properties": {
        "Id": {
          "type": "string",
          "title": "Id",
          "examples": ["Folktails", "IronTeeth"]
        },
        "Order": {
          "type": "integer",
          "title": "Order"
        },
        "Avatar": {
          "type": "string",
          "title": "Avatar",
          "examples": [
            "Sprites/Avatars/FolktailsAdult",
            "Sprites/Avatars/IronTeethAdult"
          ]
        },
        "ChildAvatar": {
          "type": "string",
          "title": "Child avatar",
          "examples": [
            "Sprites/Avatars/FolktailsChild",
            "Sprites/Avatars/IronTeethChild"
          ]
        },
        "BotAvatar": {
          "type": "string",
          "title": "Bot avatar",
          "examples": [
            "Sprites/Avatars/FolktailsBot",
            "Sprites/Avatars/IronTeethBot"
          ]
        },
        "ContaminatedAdultAvatar": {
          "type": "string",
          "title": "Contaminated adult avatar",
          "examples": [
            "Sprites/Avatars/FolktailsContaminatedAdult",
            "Sprites/Avatars/IronTeethContaminatedAdult"
          ]
        },
        "ContaminatedChildAvatar": {
          "type": "string",
          "title": "Contaminated child avatar",
          "examples": [
            "Sprites/Avatars/FolktailsContaminatedChild",
            "Sprites/Avatars/IronTeethContaminatedChild"
          ]
        },
        "Logo": {
          "type": "string",
          "title": "Logo",
          "examples": [
            "Sprites/Avatars/FolktailsLogo",
            "Sprites/Avatars/IronTeethLogo"
          ]
        },
        "NewGameFullAvatar": {
          "type": "string",
          "title": "New game full avatar",
          "examples": [
            "Sprites/Avatars/FolktailsFullNewGame",
            "Sprites/Avatars/IronTeethFullNewGame"
          ]
        },
        "Textures": {
          "$ref": "#/$defs/Textures"
        },
        "ChildTextures": {
          "$ref": "#/$defs/ChildTextures"
        },
        "MaterialCollectionIds": {
          "$ref": "#/$defs/MaterialCollectionIds"
        },
        "TemplateCollectionIds": {
          "$ref": "#/$defs/TemplateCollectionIds"
        },
        "PathMaterial": {
          "type": "string",
          "title": "Path material",
          "examples": [
            "Buildings/Paths/Path/Path.Folktails",
            "Buildings/Paths/Path/Path.IronTeeth"
          ]
        },
        "BaseWoodMaterial": {
          "type": "string",
          "title": "Base wood material",
          "examples": [
            "Materials/UberAtlas/Materials/Folktails/BaseWood_White.Folktails",
            "Materials/UberAtlas/Materials/IronTeeth/BaseWood_Grey.IronTeeth"
          ]
        },
        "NeedCollectionIds": {
          "$ref": "#/$defs/NeedCollectionIds"
        },
        "GoodCollectionIds": {
          "$ref": "#/$defs/GoodCollectionIds"
        },
        "BlueprintModifiers": {
          "$ref": "#/$defs/BlueprintModifiers"
        },
        "StartingBuildingId": {
          "type": "string",
          "title": "Starting building id",
          "examples": ["DistrictCenter.Folktails", "DistrictCenter.IronTeeth"]
        },
        "SoundId": {
          "type": "string",
          "title": "Sound id",
          "examples": ["Common"],
          "default": "Common"
        },
        "DisplayNameLocKey": {
          "type": "string",
          "title": "Display name loc key",
          "examples": [
            "Faction.Folktails.DisplayName",
            "Faction.IronTeeth.DisplayName"
          ]
        },
        "DescriptionLocKey": {
          "type": "string",
          "title": "Description loc key",
          "examples": [
            "Faction.Folktails.Description",
            "Faction.IronTeeth.Description"
          ]
        },
        "GameOverMessageLocKey": {
          "type": "string",
          "title": "Game over message loc key",
          "examples": [
            "Faction.Folktails.GameOver.Message",
            "Faction.IronTeeth.GameOver.Message"
          ]
        },
        "GameOverFlavorLocKey": {
          "type": "string",
          "title": "Game over flavor loc key",
          "examples": [
            "Faction.Folktails.GameOver.Flavor",
            "Faction.IronTeeth.GameOver.Flavor"
          ]
        },
        "Textures#append": {
          "$ref": "#/$defs/Textures"
        },
        "Textures#remove": {
          "$ref": "#/$defs/Textures"
        },
        "Textures#delete": {
          "type": "object",
          "properties": {},
          "additionalProperties": false
        },
        "ChildTextures#append": {
          "$ref": "#/$defs/ChildTextures"
        },
        "ChildTextures#remove": {
          "$ref": "#/$defs/ChildTextures"
        },
        "ChildTextures#delete": {
          "type": "object",
          "properties": {},
          "additionalProperties": false
        },
        "MaterialCollectionIds#append": {
          "$ref": "#/$defs/MaterialCollectionIds"
        },
        "MaterialCollectionIds#remove": {
          "$ref": "#/$defs/MaterialCollectionIds"
        },
        "MaterialCollectionIds#delete": {
          "type": "object",
          "properties": {},
          "additionalProperties": false
        },
        "TemplateCollectionIds#append": {
          "$ref": "#/$defs/TemplateCollectionIds"
        },
        "TemplateCollectionIds#remove": {
          "$ref": "#/$defs/TemplateCollectionIds"
        },
        "TemplateCollectionIds#delete": {
          "type": "object",
          "properties": {},
          "additionalProperties": false
        },
        "NeedCollectionIds#append": {
          "$ref": "#/$defs/NeedCollectionIds"
        },
        "NeedCollectionIds#remove": {
          "$ref": "#/$defs/NeedCollectionIds"
        },
        "NeedCollectionIds#delete": {
          "type": "object",
          "properties": {},
          "additionalProperties": false
        },
        "GoodCollectionIds#append": {
          "$ref": "#/$defs/GoodCollectionIds"
        },
        "GoodCollectionIds#remove": {
          "$ref": "#/$defs/GoodCollectionIds"
        },
        "GoodCollectionIds#delete": {
          "type": "object",
          "properties": {},
          "additionalProperties": false
        },
        "BlueprintModifiers#append": {
          "$ref": "#/$defs/BlueprintModifiers"
        },
        "BlueprintModifiers#remove": {
          "$ref": "#/$defs/BlueprintModifiers"
        },
        "BlueprintModifiers#delete": {
          "type": "object",
          "properties": {},
          "additionalProperties": false
        }
      },
      "minProperties": 1,
      "additionalProperties": false,
      "title": "Faction specification"
    },
    "StartingFactionSpec": {
      "type": "object",
      "title": "Starting faction specification",
      "additionalProperties": false
    },
    "FactionWonderSpec": {
      "type": "object",
      "properties": {
        "WonderCompletionImage": {
          "type": "string",
          "title": "Wonder completion image",
          "examples": [
            "UI/Images/WonderCompletion/wonder-completion-folktails",
            "UI/Images/WonderCompletion/wonder-completion-ironteeth"
          ]
        },
        "WonderLaunchSound": {
          "type": "string",
          "title": "Wonder launch sound",
          "examples": [
            "UI.Buildings.Wonder.EarthRecultivator",
            "UI.Buildings.Wonder.EarthRepopulator"
          ]
        },
        "WonderCompletionFlavorLocKey": {
          "type": "string",
          "title": "Wonder completion flavor loc key",
          "examples": [
            "Faction.Folktails.WonderCompletionFlavor",
            "Faction.IronTeeth.WonderCompletionFlavor"
          ]
        },
        "WonderCompletionMessageLocKey": {
          "type": "string",
          "title": "Wonder completion message loc key",
          "examples": [
            "Faction.Folktails.WonderCompletionMessage",
            "Faction.IronTeeth.WonderCompletionMessage"
          ]
        }
      },
      "minProperties": 1,
      "additionalProperties": false,
      "title": "Faction wonder specification"
    },
    "UnlockableFactionSpec": {
      "type": "object",
      "properties": {
        "PrerequisiteFaction": {
          "type": "string",
          "title": "Prerequisite faction",
          "examples": ["Folktails"],
          "default": "Folktails"
        },
        "AverageWellbeingToUnlock": {
          "type": "integer",
          "title": "Average wellbeing to unlock",
          "default": 15
        }
      },
      "minProperties": 1,
      "additionalProperties": false,
      "title": "Unlockable faction specification"
    }
  },
  "minProperties": 1,
  "additionalProperties": false,
  "$defs": {
    "Textures": {
      "type": "array",
      "items": {
        "type": "string",
        "examples": [
          "Materials/Beavers/Folktails/Adult/BeaverAdult1.Folktails",
          "Materials/Beavers/Folktails/Adult/BeaverAdult2.Folktails",
          "Materials/Beavers/Folktails/Adult/BeaverAdult3.Folktails",
          "Materials/Beavers/Folktails/Adult/BeaverAdult4.Folktails",
          "Materials/Beavers/Folktails/Adult/BeaverAdult5.Folktails",
          "Materials/Beavers/IronTeeth/Adult/BeaverAdult1.IronTeeth",
          "Materials/Beavers/IronTeeth/Adult/BeaverAdult2.IronTeeth",
          "Materials/Beavers/IronTeeth/Adult/BeaverAdult3.IronTeeth",
          "Materials/Beavers/IronTeeth/Adult/BeaverAdult4.IronTeeth",
          "Materials/Beavers/IronTeeth/Adult/BeaverAdult5.IronTeeth"
        ]
      },
      "title": "Textures"
    },
    "ChildTextures": {
      "type": "array",
      "items": {
        "type": "string",
        "examples": [
          "Materials/Beavers/Folktails/Child/BeaverChild1.Folktails",
          "Materials/Beavers/Folktails/Child/BeaverChild2.Folktails",
          "Materials/Beavers/Folktails/Child/BeaverChild3.Folktails",
          "Materials/Beavers/IronTeeth/Child/BeaverChild1.IronTeeth",
          "Materials/Beavers/IronTeeth/Child/BeaverChild2.IronTeeth",
          "Materials/Beavers/IronTeeth/Child/BeaverChild3.IronTeeth"
        ]
      },
      "title": "Child textures"
    },
    "MaterialCollectionIds": {
      "type": "array",
      "items": {
        "type": "string",
        "examples": ["Folktails", "IronTeeth"]
      },
      "title": "Material collection ids"
    },
    "TemplateCollectionIds": {
      "type": "array",
      "items": {
        "type": "string",
        "examples": [
          "Buildings.Folktails",
          "Characters.Folktails",
          "Landscaping.Folktails",
          "ModularShaftParts.Folktails",
          "NaturalResources.Folktails",
          "PowerShaftVariants.Folktails",
          "PumpPipeSegments.Folktails",
          "Buildings.IronTeeth",
          "Characters.IronTeeth",
          "Landscaping.IronTeeth",
          "ModularShaftParts.IronTeeth",
          "NaturalResources.IronTeeth",
          "Planes.IronTeeth",
          "PowerShaftVariants.IronTeeth",
          "PumpPipeSegments.IronTeeth"
        ]
      },
      "title": "Template collection ids"
    },
    "NeedCollectionIds": {
      "type": "array",
      "items": {
        "type": "string",
        "examples": ["Folktails", "IronTeeth"]
      },
      "title": "Need collection ids"
    },
    "GoodCollectionIds": {
      "type": "array",
      "items": {
        "type": "string",
        "examples": ["Folktails", "IronTeeth"]
      },
      "title": "Good collection ids"
    },
    "BlueprintModifiers": {
      "type": "array",
      "title": "Blueprint modifiers"
    }
  }
}
