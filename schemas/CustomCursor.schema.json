{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/agroqirax/timberborn-schemas/main/schemas/CustomCursor.schema.json",
  "title": "Custom cursor specification",
  "description": "Add or modify a custom cursor",
  "type": "object",
  "properties": {
    "CustomCursorSpec": {
      "type": "object",
      "properties": {
        "Id": {
          "type": "string",
          "title": "Id",
          "examples": [
            "PlantingCursor",
            "DemolishResourcesCursor",
            "PriorityCursor",
            "BeaverAvatarCursor",
            "CutTreeCursor",
            "DeleteBuildingCursor",
            "DefaultCursor",
            "CancelCursor",
            "DuplicateSettingsCursor",
            "PickConnectionCursor",
            "PickDestinationCursor",
            "GrabbingCursor"
          ]
        },
        "WindowsCursor": {
          "type": "string",
          "title": "Windows cursor",
          "examples": [
            "UI/Cursors/PlantingCursorLarge",
            "UI/Cursors/DemolishResourcesCursorLarge",
            "UI/Cursors/PriorityCursorLarge",
            "UI/Cursors/BeaverAvatarCursorLarge",
            "UI/Cursors/CutTreeCursorLarge",
            "UI/Cursors/DeleteBuildingCursorLarge",
            "",
            "UI/Cursors/CancelCursorLarge",
            "UI/Cursors/DuplicateSettingsCursorLarge",
            "UI/Cursors/PickConnectionCursorLarge",
            "UI/Cursors/PickDestinationCursorLarge",
            "UI/Cursors/GrabbingCursorLarge"
          ]
        },
        "MacOsCursor": {
          "type": "string",
          "title": "Mac os cursor",
          "examples": [
            "UI/Cursors/PlantingCursorSmall",
            "UI/Cursors/DemolishResourcesCursorSmall",
            "UI/Cursors/PriorityCursorSmall",
            "UI/Cursors/BeaverAvatarCursorSmall",
            "UI/Cursors/CutTreeCursorSmall",
            "UI/Cursors/DeleteBuildingCursorSmall",
            "",
            "UI/Cursors/CancelCursorSmall",
            "UI/Cursors/DuplicateSettingsCursorSmall",
            "UI/Cursors/PickConnectionCursorSmall",
            "UI/Cursors/PickDestinationCursorSmall",
            "UI/Cursors/GrabbingCursorSmall"
          ]
        },
        "Hotspot": {
          "type": "object",
          "properties": {
            "X": {
              "type": "number",
              "title": "X",
              "examples": [0.0, 0.5],
              "default": 0.0
            },
            "Y": {
              "type": "number",
              "title": "Y",
              "examples": [0.0, 0.5],
              "default": 0.0
            }
          },
          "required": ["X", "Y"],
          "title": "Hotspot"
        },
        "WindowsCursorOffset": {
          "type": "object",
          "properties": {
            "X": {
              "type": "number",
              "title": "X",
              "examples": [10.0, 12.0],
              "default": 10.0
            },
            "Y": {
              "type": "number",
              "title": "Y",
              "examples": [30.0, 18.0],
              "default": 30.0
            }
          },
          "required": ["X", "Y"],
          "title": "Windows cursor offset"
        },
        "MacOsCursorOffset": {
          "type": "object",
          "properties": {
            "X": {
              "type": "number",
              "title": "X",
              "examples": [15.0, 12.0],
              "default": 15.0
            },
            "Y": {
              "type": "number",
              "title": "Y",
              "examples": [45.0, 18.0],
              "default": 45.0
            }
          },
          "required": ["X", "Y"],
          "title": "Mac os cursor offset"
        }
      },
      "minProperties": 1,
      "additionalProperties": false,
      "title": "Custom cursor specification"
    }
  },
  "minProperties": 1,
  "additionalProperties": false
}
