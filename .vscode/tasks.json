{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate settings files",
      "type": "shell",
      "command": "python scripts/generate-settings.py",
      "icon": {
        "id": "settings"
      }
    },
    {
      "label": "Generate schema",
      "type": "shell",
      "windows": {
        "command": ".\\.venv\\Scripts\\activate && python scripts/generate-schemas.py ${input:jsonsPath} ${input:schemaPath} && python scripts/write-titles.py ${input:schemaPath} && python scripts/write-defaults.py ${input:schemaPath} ${input:jsonsPath} && python scripts/write-arrays.py ${input:schemaPath} && python scripts/write-replace.py ${input:schemaPath}"
      },
      "command": "source ./.venv/bin/activate && python scripts/generate-schemas.py ${input:jsonsPath} ${input:schemaPath} && python scripts/write-titles.py ${input:schemaPath} && python scripts/write-defaults.py ${input:schemaPath} ${input:jsonsPath} && python scripts/write-arrays.py ${input:schemaPath} && python scripts/write-replace.py ${input:schemaPath}",
      "icon": {
        "id": "json"
      }
    },
    {
      "label": "Validate jsons against schema",
      "type": "shell",
      "windows": {
        "command": ".\\.venv\\Scripts\\activate && python scripts/validate-jsons.py ${input:schemaPath} ${input:jsonsPath} "
      },
      "command": "source ./.venv/bin/activate && python scripts/validate-jsons.py ${input:schemaPath} ${input:jsonsPath}",
      "icon": {
        "id": "check"
      }
    }
  ],
  "inputs": [
    {
      "id": "schemaPath",
      "type": "promptString",
      "description": "Path to json schema",
      "default": "schemas/Something.schema.json"
    },
    {
      "id": "jsonsPath",
      "type": "promptString",
      "description": "Path to folder with json example files",
      "default": "exports/blueprints/something"
    }
  ]
}
